{
  "name": "ztbai-bid-editor-frontend",
  "version": "1.0.0",
  "description": "ZtbAi投标文件AI智能编辑应用前端",
  "private": true,
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "@ant-design/plots": "^2.0.0",
    "@ant-design/pro-layout": "^7.22.7",
    "@monaco-editor/react": "^4.6.0",
    "@playwright/test": "^1.55.0",
    "@reduxjs/toolkit": "^1.9.7",
    "@types/node": "^16.18.68",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "antd": "^5.12.8",
    "axios": "^1.6.2",
    "classnames": "^2.3.2",
    "dayjs": "^1.11.13",
    "lodash": "^4.17.21",
    "monaco-editor": "^0.44.0",
    "playwright": "^1.55.0",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "react-flow-renderer": "^10.3.17",
    "react-hotkeys-hook": "^4.4.1",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.20.1",
    "react-scripts": "5.0.1",
    "react-virtualized": "^9.22.5",
    "socket.io-client": "^4.7.4",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.10.2",
    "@axe-core/react": "^4.10.2",
    "@craco/craco": "^7.1.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/lodash": "^4.14.202",
    "@types/react-virtualized": "^9.21.29",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "axe-core": "^4.10.3",
    "compression-webpack-plugin": "^10.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-is-dev": "^2.0.0",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.0",
    "sass": "^1.69.5",
    "serve": "^14.2.4",
    "wait-on": "^7.2.0",
    "webpack-bundle-analyzer": "^4.9.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:production": "node scripts/build-production.js",
    "test": "craco test",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,css,scss}",
    "build:analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "test:performance": "npm run build && npx lighthouse http://localhost:3000 --output=json --output-path=./performance-report.json",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "npm run build:production && cd build && electron .",
    "copy-electron": "copy public\\electron.js build\\electron.js && copy public\\preload.js build\\preload.js",
    "dist": "npm run build:production && electron-builder",
    "dist:win": "npm run build:production && electron-builder --win",
    "dist:mac": "npm run build:production && electron-builder --mac",
    "dist:linux": "npm run build:production && electron-builder --linux"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:9958",
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "com.ztbai.bid-editor",
    "productName": "ZtbAi智能投标系统",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
